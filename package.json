{
	"name": "webext-inject-on-install",
	"version": "2.0.0-1",
	"description": "Automatically add content scripts to existing tabs when your extension is installed",
	"keywords": [
		"browser",
		"content script",
		"existing tabs",
		"extension",
		"chrome",
		"firefox",
		"safari",
		"inject"
	],
	"repository": "fregante/webext-inject-on-install",
	"funding": "https://github.com/sponsors/fregante",
	"license": "MIT",
	"author": "Federico Brigante <me@fregante.com> (https://fregante.com)",
	"type": "module",
	"exports": {
		".": "./distribution/register.js",
		"./register": "./distribution/register.js",
		"./inject.js": "./distribution/inject.js"
	},
	"files": [
		"distribution"
	],
	"xo": {
		"rules": {
			"unicorn/prefer-top-level-await": "off"
		}
	},
	"scripts": {
		"build": "tsc",
		"prepack": "tsc --sourceMap false",
		"test": "tsc --noEmit && xo",
		"test:bun": "bun test",
		"watch": "tsc --watch"
	},
	"dependencies": {
		"webext-content-scripts": "^2.6.0",
		"webext-polyfill-kinda": "^1.0.2"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^5.0.0",
		"@types/chrome": "^0.0.251",
		"@types/sinon-chrome": "^2.2.14",
		"bun": "^1.0.13",
		"bun-types": "^1.0.13",
		"sinon-chrome": "^3.0.1",
		"typescript": "^5.2.2",
		"xo": "^0.56.0"
	},
	"engines": {
		"node": ">=18"
	}
}
