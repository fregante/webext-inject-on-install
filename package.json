{
  "name": "webext-inject-on-install",
  "version": "1.0.2",
  "description": "Automatically add content scripts to existing tabs when your extension is installed. Chrome + Firefox",
  "keywords": [
    "browser",
    "content script",
    "existing tabs",
    "extension",
    "inject"
  ],
  "repository": "bfred-it/webext-inject-on-install",
  "license": "MIT",
  "author": "Federico Brigante <me@fregante.com> (https://fregante.com)",
  "files": [
    "index.js"
  ],
  "main": "index.js",
  "scripts": {
    "test": "xo",
    "watch": "onchange 'index.js' --initial -- xo --fix"
  },
  "xo": {
    "envs": [
      "browser",
      "webextensions"
    ],
    "esnext": true,
    "ignores": [
      "node_modules/**"
    ],
    "rules": {
      "prefer-template": 0
    }
  },
  "devDependencies": {
    "xo": "^0.16.0"
  }
}
